doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom
        main
            div#welcome
                form
                    input(placeholder="room name", reuqired, type="text")
                    button Enter room
            div#call
                div#myStream
                video#myFace(autoplay, playsinline, sidth="400", height="400")
                button#mute Mute
                button#camera Turn Camera Off
                select#cameras
                video#peerFace1(autoplay, playsinline, sidth="400", height="400")
                video#peerFace2(autoplay, playsinline, sidth="400", height="400")
                video#peerFace3(autoplay, playsinline, sidth="400", height="400")
                video#peerFace4(autoplay, playsinline, sidth="400", height="400")
                video#peerFace5(autoplay, playsinline, sidth="400", height="400")
                video#peerFace6(autoplay, playsinline, sidth="400", height="400")
                video#peerFace7(autoplay, playsinline, sidth="400", height="400")
                video#peerFace8(autoplay, playsinline, sidth="400", height="400")
                video#peerFace9(autoplay, playsinline, sidth="400", height="400")

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")